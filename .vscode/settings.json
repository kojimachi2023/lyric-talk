{
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "markdownlint.config": {
    "line-length": false,
    "no-duplicate-heading": false,
    "no-inline-html": false,
    "no-bare-urls": false
  },
  "markdownlint.lintWorkspaceGlobs": [".spec-workflow/**/*.md"],
  "[json][jsonc][yaml]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "files.insertFinalNewline": true,
    "editor.autoIndent": "advanced",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "chat.promptFilesRecommendations": {
    "speckit.constitution": true,
    "speckit.specify": true,
    "speckit.plan": true,
    "speckit.tasks": true,
    "speckit.implement": true
  },
  "chat.tools.terminal.autoApprove": {
    "/.*/": true,
    "/^column\\b.*-c\\s+[0-9]{4,}/": false,
    "/^date\\b.*(-s|--set)\\b/": false,
    "/^find\\b.*-(delete|exec|execdir|fprint|fprintf|fls|ok|okdir)\\b/": false,
    "/^grep\\b.*-(f|P)\\b/": false,
    "/^sort\\b.*-(o|S)\\b/": false,
    "/^tree\\b.*-o\\b/": false,
    "/\\(.+\\)/": {
      "approve": false,
      "matchCommandLine": true
    },
    "/\\{.+\\}/": {
      "approve": false,
      "matchCommandLine": true
    },
    "/`.+`/": {
      "approve": false,
      "matchCommandLine": true
    },
    "rm": false,
    "rmdir": false,
    "del": false,
    "Remove-Item": false,
    "ri": false,
    "rd": false,
    "erase": false,
    "dd": false,
    "kill": false,
    "ps": false,
    "top": false,
    "Stop-Process": false,
    "spps": false,
    "taskkill": false,
    "taskkill.exe": false,
    "curl": false,
    "wget": false,
    "Invoke-RestMethod": false,
    "Invoke-WebRequest": false,
    "irm": false,
    "iwr": false,
    "chmod": false,
    "chown": false,
    "Set-ItemProperty": false,
    "sp": false,
    "Set-Acl": false,
    "jq": false,
    "xargs": false,
    "eval": false,
    "Invoke-Expression": false,
    "iex": false,
    "git reset": false,
    "git checkout": false
  },
  "json.schemaDownload.enable": true,
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.alternateGptPrompt.enabled": true,
  "github.copilot.chat.edits.temporalContext.enabled": false,
  "github.copilot.chat.newWorkspace.useContext7": true,
  "chat.agent.maxRequests": 200,
  "chat.todoListTool.writeOnly": true,
  "github.copilot.chat.responsesApiReasoningEffort": "high",
  "github.copilot.chat.summarizeAgentConversationHistory.enabled": false,
  "github.copilot.chat.anthropic.thinking.enabled": true,
  "github.copilot.chat.anthropic.tools.websearch.enabled": true,
  "github.copilot.selectedCompletionModel": "",
  "chat.extensionUnification.enabled": true,
  "chat.tools.terminal.ignoreDefaultAutoApproveRules": false,
  "github.copilot.chat.agent.autoFix": true,
  "notebook.defaultFormatter": "charliermarsh.ruff"
}
